{
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    },
    { "src": "/.*", "status": 404, "dest": "/dist/index.html" },
    { "src": "/api/(.*)", "dest": "/api/$1" }
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build"
    },
    {
      "src": "dist/**",
      "use": "@now/static"
    },
    {
      "src": "/api/**",
      "use": "@now/node"
    }
  ],
  "env": {
    "IS_NOW": "true"
  }
}
