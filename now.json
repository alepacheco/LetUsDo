{
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    },
    { "src": "/.*", "status": 404, "dest": "/dist/index.html" }
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build"
    },
    {
      "src": "dist/**",
      "use": "@now/static"
    },
    {
      "src": "/api/**",
      "use": "@now/node"
    }
  ],
  "version": 2,
  "build": {
    "env": {
      "STRIPE_SERVER": "@stripe-server-live",
      "STRIPE_FRONT": "@stripe-front-live"
    }
  },
  "env": {
    "IS_NOW": "true",
    "STRIPE_SERVER": "@stripe-server-live",
    "STRIPE_FRONT": "@stripe-front-live"
  }
}
