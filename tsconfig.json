{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "lib": ["es2019", "dom"],
        "types": [
            "jest",
            "node"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./test/**/*"
    ],
    "allowSyntheticDefaultImports": true
}